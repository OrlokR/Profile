<Profile>


  <Name>Muddy Water</Name>
  <KillRadius>50</KillRadius>

  <Order>
    <If Condition="&Muddy_Water; &gt; 0 or &Muddy_Water_HQ; &gt; 0">
      <If Condition="not IsOnMap(653)">
        <TeleportTo Name="Black Brush Station" AetheryteId="53" />
        <WaitTimer WaitTime="5"/>
      </If>
      <LogMessage Message="Starting harvest of &Muddy_Water; Muddy Water and &Muddy_Water_HQ; HQ Muddy Water."/>
      <Gather While="not HasAtLeast(5488, &Muddy_Water;) or not HqHasAtLeast(5488, &Muddy_Water_HQ;)">
        <GatherObject>Mineral Deposit</GatherObject>
        <HotSpots>
          <Hotspot Radius="90" XYZ="264.2455, 56.165, 216.7509"/>
        </HotSpots>
        <Slot>5</Slot>
        <GatheringSkillOrder>
          <GatheringSkill ActionId="242" SpellName="Unearth" TimesToCast="1"/>
        </GatheringSkillOrder>
      </Gather>
      <LogMessage Message="Muddy Water harvest complete. Moving to next task."/>
      <WaitTimer WaitTime="5"/>
    </If>
  </Order>






</Profile>
